<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Londres"
        android:textSize="25sp"
        android:textColor="@color/colorWhite"
        android:id="@+id/cityName"
        android:padding="20dp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/titleTemperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:padding="10dp"
            android:text="Temp. media:"
            android:textSize="15sp"
            android:textColor="@color/colorWhite" />

        <ImageView
            android:id="@+id/weatherView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_toLeftOf="@+id/titleTemperature"
            android:layout_marginRight="10dp"
            />

        <TextView
            android:id="@+id/temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/titleTemperature"
            android:layout_alignLeft="@+id/titleTemperature"
            android:layout_alignRight="@+id/titleTemperature"
            android:gravity="center"
            android:text="25ÂºC"
            android:textSize="15sp"
            android:textColor="@color/colorWhite" />

    </RelativeLayout>

</LinearLayout>